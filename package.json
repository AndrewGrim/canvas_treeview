{
    "name": "mhwi_db",
    "version": "0.1.0",
    "main": "main.js",
    "author": {
        "name": "Andrew Grim",
        "email": "andrew.grim.persona@gmail.com",
        "url": "https://github.com/AndrewGrim/"
    },
    "repository": "https://github.com/AndrewGrim/mhwi_db",
    "homepage": "https://github.com/AndrewGrim/mhwi_db",
    "license": "MIT",
    "description": "A GUI database application for Monster Hunter World: Iceborne expansion.",
    "scripts": {
        "start": "tsc && electron .",
        "postinstall": "electron-builder install-app-deps",
        "pack": "electron-builder build --dir",
        "dist": "electron-builder build"
    },
    "dependencies": {
        "better-sqlite3": "^7.1.0"
    },
    "devDependencies": {
        "electron": "^9.1.0",
        "electron-builder": "^22.8.0",
        "better-sqlite3": "^7.1.0",
        "@types/node": "^14.0.27",
        "@types/better-sqlite3": "^5.4.0",
        "typescript": "^3.9.4"
    },
    "build": {
        "appId": "yourappid",
        "linux": {
            "category": "Utility",
            "target": "AppImage"
        },
        "win": {
            "target": "nsis",
            "icon": "build/icon.ico"
        },
        "files": [
            "**/*",
            "!mhwi.db"
        ]
    }
}
